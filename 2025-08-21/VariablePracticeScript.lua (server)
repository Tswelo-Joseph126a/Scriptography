local age, level : number -- Variable declarations
local name, status : string
local isAlive : boolean

function describeCharacter(Name, Age, Level, Status) -- This displays the info into the output/console.
	print("Name: " .. Name)
	print("Age: " .. Age)
	print("Level: " .. Level)
	print("Status: " .. Status)
	
	if Level >= 10 then -- If the player is higher than level 10, print this statement.
		print(Name .. " is a boss-level player!")
	end
end

game:GetService("Players").PlayerAdded:Connect(function(player) -- This executes once a play joins the server.
	name = player.Name
	age = player.AccountAge
	level = math.random(1, 10)
	isAlive = true
	
	if isAlive then
		status = "Alive"
	else
		status = "Dead"
	end
	
	describeCharacter(name, age, level, status) -- This calls the function 
end)
